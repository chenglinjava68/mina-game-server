<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="Mapper.Job">

	<parameterMap type="Job" id="jobPM">
		<parameter property="id" />
		<parameter property="hp" />
		<parameter property="mp" />
		<parameter property="atk" />
		<parameter property="def" />
		<parameter property="ms" />
		<parameter property="type" />
	</parameterMap>

	<resultMap type="Job" id="jobRM">
		<id property="id" column="id" />
		<result property="hp" column="hp" />
		<result property="mp" column="mp" />
		<result property="atk" column="atk" />
		<result property="def" column="def" />
		<result property="ms" column="ms" />
		<result property="type" column="type"/>
	</resultMap>

	<insert id="create" parameterType="Job" useGeneratedKeys="true">
		INSERT
		INTO t_job(hp,mp,atk,def,ms,type,regDate,modDate)
		VALUES(#{hp},#{mp},#{atk},#{def},#{ms},#{type},#{regDate},#{modDate})
	</insert>

	<update id="update" parameterType="Job">
		UPDATE t_job SET
		hp=#{hp},
		mp=#{mp},
		atk=#{atk},
		def=#{def},
		ms=#{ms},
		type=#{type},
		regDate=#{regDate},
		modDate=#{modDate}
		WHERE id=#{id};
	</update>

	<delete id="delete" parameterType="int">
		DELETE FROM t_job WHERE
		id=#{id}
	</delete>

	<select id="getJobById" parameterType="int" resultMap="jobRM">
		SELECT *
		FROM
		t_job WHERE id=#{id}
	</select>
	
	<select id="selectAll" resultType="Job">
		SELECT * FROM t_job
	</select>
	
	<select id="selectByType" parameterType="int" resultType="Job">
		SELECT * FROM t_job WHERE type=#{type}
	</select>
</mapper>